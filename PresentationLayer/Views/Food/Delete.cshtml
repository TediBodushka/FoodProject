@model BusinessLayer.Food

<h2 class="text-danger">Delete Food</h2>

<div class="card border-danger shadow-sm mt-3">
    <div class="card-body">
        <p>Are you sure you want to delete this food?</p>

        <strong>@Model.Name</strong><br />
        Quantity: @Model.Quantity<br />
        Price: @Model.Price.ToString("0.00")

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
